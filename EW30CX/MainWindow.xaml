                                                <WrapPanel>
                                                    <Border Width="220" BorderBrush="#777777" BorderThickness="0,0,0.5,0">
                                                        <WrapPanel>
                                                            <Label  Style="{StaticResource label_title}" Width="Auto" BorderThickness="0,0,0,0" Content="Test 2G - Antenna 1"/>
                                                            <Label FontSize="13" Content="("/>
                                                            <Label Margin="-5,0,0,0" FontWeight="SemiBold" FontSize="13" Foreground="Blue" Content="{Binding Path=Power_Min_2G_Chain1, UpdateSourceTrigger=PropertyChanged}"/>
