                                        </StackPanel>

                                    </ScrollViewer>

                                </TabItem>


                                <!--LOG SYSTEM-->
                                <TabItem>
                                    <TabItem.Header>
                                        <Label FontSize="15" Content="Log System"/>
                                    </TabItem.Header>

                                    <ScrollViewer x:Name="Scr_LogSystem">
                                        <RichTextBox  FontSize="13" FontWeight="Normal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                            <FlowDocument>
                                                <Paragraph>
                                                    <Run Text="{Binding Path=LogSystem,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                                </Paragraph>
                                            </FlowDocument>
                                        </RichTextBox>
                                    </ScrollViewer>

                                </TabItem>


                                <!--LOG SSH-->
                                <TabItem>
