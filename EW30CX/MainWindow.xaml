                                                    <Label  Style="{StaticResource label_title}" Content="Load file pathloss"/>
                                                    <Label  Content="{Binding Path=loadFilePathLoss, UpdateSourceTrigger=PropertyChanged}">
                                                        <Label.Style>
                                                            <Style BasedOn="{StaticResource label_content}" TargetType="Label">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Path=loadFilePathLoss}" Value="-">
                                                                        <Setter Property="Foreground" Value="Black"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Path=loadFilePathLoss}" Value="Waiting...">
                                                                        <Setter Property="Foreground" Value="Orange"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Path=loadFilePathLoss}" Value="Passed">
                                                                        <Setter Property="Foreground" Value="Lime"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Path=loadFilePathLoss}" Value="Failed">
                                                                        <Setter Property="Foreground" Value="Red"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Label.Style>
                                                    </Label>
                                                </WrapPanel>
