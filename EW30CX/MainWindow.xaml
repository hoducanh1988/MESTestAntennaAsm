                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Label.Style>
                                                    </Label>

                                                    <Label Content="{Binding Path=Power2G_Anten2, UpdateSourceTrigger=PropertyChanged}"/>
                                                </WrapPanel>
                                            </Border>


                                            <!--Off wifi 2G-->
                                            <Border Visibility="Collapsed" Height="28" BorderBrush="#777777" BorderThickness="0.5,0,0.5,0.5">
                                                <WrapPanel Background="#BCBCBC">
                                                    <Label  Style="{StaticResource label_title}" Content="Off wifi 2G, on wifi 5G"/>
